<h1>Update Figure: <%=@figure.name%></h1>

<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <label>Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">

  <br></br>

  <label>Figure's Title:</label>

  <br></br>

  <%Title.all.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%=title.id%>" <%='checked' if @figure.titles.name == title.name %>><%=title.name%></input>
  <%end%>

  <br></br>

  <label>and/or, create a new Title:</label>
  <br></br>
  <label>name:</label>
    <input  type="text" name="title[name]" id="new_title"></input>
  <br></br>

  <label>Figure's Landmark:</label>

  <%Landmark.all.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.name %>" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark) %>><%=landmark.name%></input>
  <%end%>

  <br></br>

  <label>and/or, create a new Landmark:</label>
  <br></br>
  <label>name:</label>
    <input  type="text" name="landmark[name]" id="new_landmark"></input>
  <br></br>


  <input type="submit" value="Edit Figure">
</form>
